<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparentWhite"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:weightSum="13">

        <Spinner
            android:id="@+id/data_crop_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:entries="@array/crop_list"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/data_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:background="@drawable/data_input_field"
            android:inputType="number"
            android:padding="4dp"
            android:textColor="@color/colorPrimaryDark" />

        <Spinner
            android:id="@+id/data_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:entries="@array/production_unit"
            android:textAlignment="center" />

        <Button
            android:id="@+id/data_field_remove"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableStart="@drawable/ic_close_grey_24dp"
            android:onClick="removeField" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />
</LinearLayout>