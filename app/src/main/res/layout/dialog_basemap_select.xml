<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/dialog_basemap_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:drawableStart="@drawable/basemap_lightgray_canvas"
        app:layout_constraintEnd_toStartOf="@+id/dialog_basemap_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_basemap_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Light Gray Canvas"
        app:layout_constraintEnd_toEndOf="@+id/dialog_basemap_1"
        app:layout_constraintStart_toStartOf="@+id/dialog_basemap_1"
        app:layout_constraintTop_toBottomOf="@+id/dialog_basemap_1" />

    <Button
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:drawableStart="@drawable/basemap_topographic"
        android:id="@+id/dialog_basemap_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_basemap_1"
        app:layout_constraintTop_toTopOf="@+id/dialog_basemap_1" />


    <TextView
        android:id="@+id/dialog_basemap_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Topographic"
        app:layout_constraintEnd_toEndOf="@+id/dialog_basemap_2"
        app:layout_constraintStart_toStartOf="@+id/dialog_basemap_2"
        app:layout_constraintTop_toBottomOf="@+id/dialog_basemap_2" />

    <Button
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:drawableStart="@drawable/basemap_imagery"
        android:id="@+id/dialog_basemap_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_basemap_1"
        app:layout_constraintStart_toStartOf="@+id/dialog_basemap_1"
        app:layout_constraintTop_toBottomOf="@+id/dialog_basemap_1_tv" />

    <TextView
        android:id="@+id/dialog_basemap_3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Imagery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_basemap_3"
        app:layout_constraintStart_toStartOf="@+id/dialog_basemap_3"
        app:layout_constraintTop_toBottomOf="@+id/dialog_basemap_3" />

    <Button
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:drawableStart="@drawable/basemap_osm"
        android:id="@+id/dialog_basemap_4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_basemap_2"
        app:layout_constraintStart_toStartOf="@+id/dialog_basemap_2"
        app:layout_constraintTop_toBottomOf="@+id/dialog_basemap_2_tv" />

    <TextView
        android:id="@+id/dialog_basemap_4_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="OpenStreetMap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_basemap_4"
        app:layout_constraintStart_toStartOf="@+id/dialog_basemap_4"
        app:layout_constraintTop_toBottomOf="@+id/dialog_basemap_4" />
</android.support.constraint.ConstraintLayout>