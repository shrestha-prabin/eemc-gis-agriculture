<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/legend_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent_black"
    android:padding="8dp">

    <TextView
        android:id="@+id/legend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Legend"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/legend_iv_6"
        android:layout_width="@dimen/legend_imagesize"
        android:layout_height="@dimen/legend_imagesize"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/legend_title"
        app:layout_constraintTop_toBottomOf="@+id/legend_title" />

    <TextView
        android:id="@+id/legend_tv_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Legend Range"
        app:layout_constraintBottom_toBottomOf="@+id/legend_iv_6"
        app:layout_constraintStart_toEndOf="@+id/legend_iv_6"
        app:layout_constraintTop_toTopOf="@+id/legend_iv_6" />

    <ImageView
        android:id="@+id/legend_iv_5"
        android:layout_width="@dimen/legend_imagesize"
        android:layout_height="@dimen/legend_imagesize"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/legend_iv_6"
        app:layout_constraintTop_toBottomOf="@+id/legend_iv_6" />

    <TextView
        android:id="@+id/legend_tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp"
        android:text="Legend Range"
        app:layout_constraintBottom_toBottomOf="@+id/legend_iv_5"
        app:layout_constraintStart_toStartOf="@+id/legend_tv_6"
        app:layout_constraintTop_toTopOf="@+id/legend_iv_5" />

    <ImageView
        android:id="@+id/legend_iv_4"
        android:layout_width="@dimen/legend_imagesize"
        android:layout_height="@dimen/legend_imagesize"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/legend_iv_5"
        app:layout_constraintTop_toBottomOf="@+id/legend_iv_5" />

    <TextView
        android:id="@+id/legend_tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp"
        android:text="Legend Range"
        app:layout_constraintBottom_toBottomOf="@+id/legend_iv_4"
        app:layout_constraintStart_toStartOf="@+id/legend_tv_5"
        app:layout_constraintTop_toTopOf="@+id/legend_iv_4" />

    <ImageView
        android:id="@+id/legend_iv_3"
        android:layout_width="@dimen/legend_imagesize"
        android:layout_height="@dimen/legend_imagesize"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/legend_iv_4"
        app:layout_constraintTop_toBottomOf="@+id/legend_iv_4" />

    <TextView
        android:id="@+id/legend_tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp"
        android:text="Legend Range"
        app:layout_constraintBottom_toBottomOf="@+id/legend_iv_3"
        app:layout_constraintStart_toStartOf="@+id/legend_tv_4"
        app:layout_constraintTop_toTopOf="@+id/legend_iv_3" />

    <ImageView
        android:id="@+id/legend_iv_2"
        android:layout_width="@dimen/legend_imagesize"
        android:layout_height="@dimen/legend_imagesize"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/legend_iv_3"
        app:layout_constraintTop_toBottomOf="@+id/legend_iv_3" />

    <TextView
        android:id="@+id/legend_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp"
        android:text="Legend Range"
        app:layout_constraintBottom_toBottomOf="@+id/legend_iv_2"
        app:layout_constraintStart_toStartOf="@+id/legend_tv_3"
        app:layout_constraintTop_toTopOf="@+id/legend_iv_2" />

    <ImageView
        android:id="@+id/legend_iv_1"
        android:layout_width="@dimen/legend_imagesize"
        android:layout_height="@dimen/legend_imagesize"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/legend_iv_2"
        app:layout_constraintTop_toBottomOf="@+id/legend_iv_2" />

    <TextView
        android:id="@+id/legend_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp"
        android:text="Legend Range"
        app:layout_constraintBottom_toBottomOf="@+id/legend_iv_1"
        app:layout_constraintStart_toStartOf="@+id/legend_tv_2"
        app:layout_constraintTop_toTopOf="@+id/legend_iv_1" />

</android.support.constraint.ConstraintLayout>